<project name="NUnit Project" default="transform">
    <property name="reports.xml.dir" value="${wd}/reports/xml" />
    <property name="reports.html.dir" value="${wd}/reports/html" />
    
    <target name="clean">
	<delete dir="${reports.html.dir}"/>
    </target>

    <target name="prepare">
	<mkdir dir="${reports.html.dir}"/>
    </target>
     	    
    <target name="transform" depends="clean, prepare">
	<style in="${reports.xml.dir}/report.xml" out="${reports.html.dir}/report.html" style="${toolDir}/nunitnoframe.xsl"/>
     </target>
</project>
