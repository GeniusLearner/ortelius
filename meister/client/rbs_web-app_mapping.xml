<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN" "http://castor.exolab.org/mapping.dtd">
<mapping>
 <description>mapping for RBS Server Startup configuration</description>

 <class name="com.openmake.core.models.xml.Servlet" >
  <map-to xml="servlet" />
  <field name="id" type="java.lang.String" required="true" lazy="false" direct="false" >
    <bind-xml name="id" node="attribute" />
  </field>
  <field name="servletName" type="string" required="true" lazy="false" direct="false" />
  <field name="displayName" type="string" required="true" lazy="false" direct="false" />
  <field name="description" type="string" required="true" lazy="false" direct="false" />
  <field name="servletClass" type="string" required="true" lazy="false" direct="false" />
  <field name="initParams" type="com.openmake.core.models.xml.InitParam" collection="collection" 
                           required="true" lazy="false" direct="false" >
   <bind-xml name="init-param" auto-naming="deriveByClass" />
  </field>
  <field name="loadOnStartup" type="integer" required="true" lazy="false" direct="false" >
   <bind-xml name="load-on-startup" />
  </field>
 </class>
 
  <class name="com.openmake.core.models.xml.InitParam" >
  <map-to xml="init-param"/>
  <field name="id" type="string" required="true" lazy="false" direct="false" >
    <bind-xml name="id" node="attribute" />
  </field>
  <field name="paramName" type="string" required="true" lazy="false" direct="false" >
   <bind-xml name="param-name" node="element" />
  </field>
  <field name="paramValue" type="string" required="true" lazy="false" direct="false" >
   <bind-xml name="param-value" node="element" />
  </field>
 </class>

 <class name="com.openmake.core.models.xml.ServletMapping" >
  <field name="id" type="string">
    <bind-xml name="id" node="attribute" />
  </field>
  <field name="servletName" type="string" />
  <field name="urlPattern" type="string" />
 </class>

 <class name="com.openmake.core.models.xml.WelcomeFileList" >
  <field name="id" type="string">
    <bind-xml name="id" node="attribute" />
  </field>
  <field name="welcomeFile" type="string" />
 </class>

 <class name="com.openmake.core.models.xml.WebApp">
  <field name="id" type="string" required="true" lazy="false" direct="false" >
    <bind-xml name="id" node="attribute" />
  </field>
  <field name="displayName" type="string" />
  <field name="description" type="string" />
  <field name="servlets" type="com.openmake.core.models.xml.Servlet" collection="collection" >
    <bind-xml name="servlet" node="element" />
  </field>
  <field name="servletMappings" type="com.openmake.core.models.xml.ServletMapping" collection="collection" >
   <bind-xml auto-naming="deriveByClass" />
  </field>
  <field name="welcomeFileLists" type="com.openmake.core.models.xml.WelcomeFileList" collection="collection" >
   <bind-xml auto-naming="deriveByClass" />
  </field>
 </class>
</mapping>
